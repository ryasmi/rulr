{
	"name": "rulr",
	"version": "0.0.0-development",
	"description": "Validation and unit conversion errors in TypeScript at compile-time. Started in 2016.",
	"repository": {
		"type": "git",
		"url": "https://github.com/ryansmith94/rulr.git"
	},
	"type": "module",
	"source": "src/rulr.ts",
	"exports": {
		"require": "./dist/rulr.cjs",
		"default": "./dist/rulr.modern.js"
	},
	"main": "dist/rulr.cjs",
	"module": "dist/rulr.module.js",
	"unpkg": "dist/rulr.umd.js",
	"typings": "dist/rulr.d.ts",
	"author": "ryansmith94",
	"license": "MIT",
	"files": [
		"dist",
		"readme.md"
	],
	"scripts": {
		"prepare": "husky install",
		"test": "jest",
		"start": "ts-node src/example.ts",
		"build": "microbundle"
	},
	"dependencies": {
		"atob": "^2.1.2",
		"make-error": "^1.3.6",
		"validator": "^13.0.0"
	},
	"devDependencies": {
		"@commitlint/config-conventional": "16.2.1",
		"@types/atob": "2.1.2",
		"@types/btoa": "1.2.3",
		"@types/jest": "27.4.1",
		"@types/node": "16.11.26",
		"@types/validator": "13.7.2",
		"@typescript-eslint/eslint-plugin": "5.19.0",
		"@typescript-eslint/parser": "5.19.0",
		"btoa": "1.2.1",
		"commitlint": "16.2.3",
		"eslint": "8.13.0",
		"eslint-config-prettier": "8.5.0",
		"eslint-plugin-deprecation": "1.3.2",
		"husky": "7.0.4",
		"jest": "27.5.1",
		"microbundle": "0.14.2",
		"prettier": "2.6.2",
		"pretty-quick": "3.1.3",
		"semantic-release": "19.0.2",
		"ts-jest": "27.1.4",
		"ts-node": "10.7.0",
		"typescript": "4.6.3"
	},
	"jest": {
		"preset": "ts-jest",
		"testEnvironment": "node",
		"bail": 1,
		"collectCoverage": true,
		"coverageThreshold": {
			"global": {
				"lines": 100
			}
		}
	},
	"prettier": {
		"trailingComma": "es5",
		"tabWidth": 2,
		"useTabs": true,
		"semi": false,
		"singleQuote": true,
		"printWidth": 100,
		"arrowParens": "always"
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		],
		"rules": {
			"scope-case": [
				0,
				"always",
				[
					"sentence-case"
				]
			],
			"subject-case": [
				0,
				"always",
				[
					"sentence-case"
				]
			]
		}
	},
	"releases": {
		"branches": [
			"master"
		]
	},
	"publishConfig": {
		"access": "public"
	},
	"eslintConfig": {
		"root": true,
		"parser": "@typescript-eslint/parser",
		"parserOptions": {
			"ecmaVersion": 2020,
			"sourceType": "module",
			"project": "./tsconfig.json"
		},
		"plugins": [
			"@typescript-eslint",
			"deprecation"
		],
		"extends": [
			"eslint:recommended",
			"plugin:@typescript-eslint/recommended",
			"prettier"
		],
		"rules": {
			"@typescript-eslint/explicit-module-boundary-types": "off",
			"deprecation/deprecation": "warn"
		}
	}
}
