{
	"name": "rulr",
	"version": "0.0.0-development",
	"description": "TypeScript validation package. All the validation errors, one function call. Guarantees validation at compile-time.",
	"source": "src/rulr.ts",
	"main": "dist/rulr.js",
	"exports": "./dist/rulr.modern.js",
	"module": "dist/rulr.module.js",
	"unpkg": "dist/rulr.umd.js",
	"typings": "dist/rulr.d.ts",
	"author": "ryansmith94",
	"license": "MIT",
	"files": [
		"dist",
		"readme.md"
	],
	"scripts": {
		"test": "jest",
		"test:dev": "jest --watch -o",
		"start": "ts-node src/example.ts",
		"lint": "eslint --cache --fix src",
		"lint:ci": "eslint src",
		"build": "microbundle"
	},
	"dependencies": {
		"atob": "^2.1.2",
		"make-error": "^1.3.6",
		"validator": "^13.0.0"
	},
	"devDependencies": {
		"@commitlint/config-conventional": "15.0.0",
		"@types/atob": "2.1.2",
		"@types/btoa": "1.2.3",
		"@types/jest": "27.0.3",
		"@types/node": "16.11.11",
		"@types/validator": "13.7.0",
		"@typescript-eslint/eslint-plugin": "5.5.0",
		"@typescript-eslint/parser": "5.5.0",
		"btoa": "1.2.1",
		"commitlint": "15.0.0",
		"eslint": "7.32.0",
		"eslint-config-prettier": "8.3.0",
		"eslint-plugin-deprecation": "1.2.1",
		"husky": "4.3.8",
		"jest": "27.3.1",
		"microbundle": "0.14.2",
		"prettier": "2.5.0",
		"pretty-quick": "3.1.2",
		"semantic-release": "18.0.1",
		"ts-jest": "27.0.7",
		"ts-node": "10.4.0",
		"typescript": "4.5.2"
	},
	"jest": {
		"preset": "ts-jest",
		"testEnvironment": "node",
		"bail": 1,
		"collectCoverage": true,
		"coverageThreshold": {
			"global": {
				"lines": 100
			}
		}
	},
	"prettier": {
		"trailingComma": "es5",
		"tabWidth": 2,
		"useTabs": true,
		"semi": false,
		"singleQuote": true,
		"printWidth": 100,
		"arrowParens": "always"
	},
	"husky": {
		"hooks": {
			"commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
			"pre-commit": "jest --onlyChanged && pretty-quick --staged && yarn lint"
		}
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		],
		"rules": {
			"scope-case": [
				0,
				"always",
				[
					"sentence-case"
				]
			],
			"subject-case": [
				0,
				"always",
				[
					"sentence-case"
				]
			]
		}
	},
	"releases": {
		"branches": [
			"master"
		]
	},
	"publishConfig": {
		"access": "public"
	},
	"renovate": {
		"extends": [
			"@ht2-labs:base"
		]
	},
	"eslintConfig": {
		"root": true,
		"parser": "@typescript-eslint/parser",
		"parserOptions": {
			"ecmaVersion": 2020,
			"sourceType": "module",
			"project": "./tsconfig.json"
		},
		"plugins": [
			"@typescript-eslint",
			"deprecation"
		],
		"extends": [
			"eslint:recommended",
			"plugin:@typescript-eslint/recommended",
			"prettier"
		],
		"rules": {
			"@typescript-eslint/explicit-module-boundary-types": "off",
			"deprecation/deprecation": "warn"
		}
	}
}
