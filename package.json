{
	"name": "rulr",
	"version": "0.0.0-development",
	"description": "Validation and unit conversion errors in TypeScript at compile-time. Started in 2016.",
	"repository": {
		"type": "git",
		"url": "https://github.com/ryasmi/rulr.git"
	},
	"type": "module",
	"source": "src/rulr.ts",
	"exports": {
		"require": "./dist/rulr.cjs",
		"default": "./dist/rulr.modern.js"
	},
	"main": "dist/rulr.cjs",
	"module": "dist/rulr.module.js",
	"unpkg": "dist/rulr.umd.js",
	"typings": "dist/rulr.d.ts",
	"author": "ryansmith94",
	"license": "MIT",
	"files": [
		"dist",
		"readme.md"
	],
	"scripts": {
		"prepare": "husky",
		"test": "jest",
		"start": "ts-node src/example.ts",
		"build": "microbundle"
	},
	"dependencies": {
		"atob": "^2.1.2",
		"make-error": "^1.3.6",
		"validator": "^13.0.0"
	},
	"devDependencies": {
		"@commitlint/config-conventional": "19.8.1",
		"@types/atob": "2.1.4",
		"@types/btoa": "1.2.5",
		"@types/jest": "29.5.14",
		"@types/node": "22.16.4",
		"@types/validator": "13.15.2",
		"@typescript-eslint/eslint-plugin": "8.37.0",
		"@typescript-eslint/parser": "8.37.0",
		"btoa": "1.2.1",
		"commitlint": "19.8.1",
		"eslint": "9.31.0",
		"eslint-config-prettier": "10.1.5",
		"husky": "9.1.7",
		"jest": "29.7.0",
		"lint-staged": "15.5.2",
		"microbundle": "0.15.1",
		"prettier": "3.6.2",
		"pretty-quick": "4.2.2",
		"semantic-release": "24.2.7",
		"ts-jest": "29.4.0",
		"ts-node": "10.9.2",
		"typescript": "5.8.3"
	},
	"jest": {
		"preset": "ts-jest",
		"testEnvironment": "node",
		"bail": 1,
		"collectCoverage": true,
		"coverageThreshold": {
			"global": {
				"lines": 100
			}
		},
		"injectGlobals": false
	},
	"prettier": {
		"trailingComma": "es5",
		"tabWidth": 2,
		"useTabs": true,
		"semi": false,
		"singleQuote": true,
		"printWidth": 100,
		"arrowParens": "always"
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		],
		"rules": {
			"scope-case": [
				0,
				"always",
				[
					"sentence-case"
				]
			],
			"subject-case": [
				0,
				"always",
				[
					"sentence-case"
				]
			]
		}
	},
	"releases": {
		"branches": [
			"master"
		]
	},
	"publishConfig": {
		"access": "public"
	},
	"lint-staged": {
		"*.{ts,js}": "eslint --cache --fix",
		"*.{ts,js,css,md}": "prettier --write"
	}
}
